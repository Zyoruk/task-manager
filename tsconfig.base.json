{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@task-manager/tm-ui": ["./lib/tm-ui/src/index.ts"],
      "tm-dashboard-app/Routes": [
        "apps/tm-dashboard-app/src/app/remote-entry/entry.routes.ts"
      ],
      "tm-notifications-app/Routes": [
        "apps/tm-notifications-app/src/app/remote-entry/entry.routes.ts"
      ],
      "tm-notifications-app/ToastMessage": [
        "apps/tm-notifications-app/src/app/components/tm-toast-message/tm-toast-message.component.ts"
      ],
      "tm-settings-app/Routes": [
        "apps/tm-settings-app/src/app/remote-entry/entry.routes.ts"
      ],
      "tm-tasks-app/Routes": [
        "apps/tm-tasks-app/src/app/remote-entry/entry.routes.ts"
      ],
      "tm-tasks-app/Board": [
        "apps/tm-tasks-app/src/app/components/tm-board/tm-board.component.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
